#!/bin/bash
# Pre-commit hook to update version SHA in index.html on every commit
# Install by copying to .git/hooks/pre-commit and making executable:
# cp scripts/pre-commit.sample .git/hooks/pre-commit
# chmod +x .git/hooks/pre-commit

echo "Updating version SHA..."

# Run the update script
./scripts/update-version.sh

# Stage the updated index.html
git add index.html

echo "Version updated and staged"

exit 0
